<% if(recipe != null) { %>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%- recipe.name %></li>
        </ol>
    </nav>
    <div class="row">
        <div class="col-12 col-md-4">
            <img src="/img/<%- recipe.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- recipe.name %>"
                loading="lazy">
        </div>
        <div class="col-12 col-md-8">
            <div class="row">
                <div class="col-12">
                    <h1><%- recipe.name %></h1>
                    <form id="saveForm" action="/save" method="post">
                        <input type="hidden" name="recipeId" id="recipeId" value="<%- recipe._id %>">
                        <button type="submit" class="btn btn-primary btn-dark btn-lg" id="saveButton">Save</button>
                    </form>
                </div>
                <div class="col-12 mt-2">
                    <h4><%- recipe.cookingtime %></h4>
                </div>
                <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- recipe.category %></i></div>
                <div class="col-12" style="white-space: pre-line;">
                    <h4>Cooking Instruction</h4>
                    <%- recipe.instruction %>
                </div>
            </div>
            <div class="row pt-4">
                <div class="col-12">
                    <h4>Ingredients</h4>
                    <ul class="list-group group-list-flush">
                        <% recipe.ingredients.forEach(function(ingredients, index){ %>
                            <li class="list-group-item">
                                <%= ingredients %>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
<% } else { %>
    <p>No items found.</p>
<% } %>